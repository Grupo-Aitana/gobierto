<div class="gradient-bg">
  <div class="column">
    <h2 class="with_separator"><%= t('.up_to_date', site_title: current_site.organization_name) %></h2>

    <div class="pure-g agenda three_by_three">
      <div class="pure-u-1 pure-u-md-1-3 center">
        <h3 class="agenda_title"><%= t('.agenda') %></h3>
        <div class="p_1  content_block">
          <% if @scope_events %>
            <%= render partial: "gobierto_participation/shared/events/place_event", collection: @scope_events %>
          <% else %>
            <%= t('.no_events') %>
          <% end %>
        </div>
        <% if @scope_events %>
          <%= link_to t('.show_more_events'), gobierto_participation_scope_events_path(@scope.slug) %>
        <% end %>
      </div>

      <div class="pure-u-1 pure-u-md-1-3 center">
        <h3 class="agenda_title"><%= t('.the_last') %></h3>
        <div class="p_1  content_block" id="the_last">
          <% if @scope_notifications.any? %>
            <% @scope_notifications.each do |activity| %>
              <%= render 'gobierto_participation/processes/place_activities', { activity: activity } %>
            <% end %>
          <% else %>
            <%= t('.no_events') %>
          <% end %>
        </div>
        <% if @scope_notifications.any? %>
          <%= link_to t('.show_more_updates'), gobierto_participation_scope_activities_path(@scope.slug) %>
        <% end %>
      </div>

      <div class="pure-u-1 pure-u-md-1-3 center">
        <h3 class="agenda_title"><%= t('.news') %></h3>
        <div class="p_1  content_block" id="news">
          <% if @scope_news.any? %>
            <% @scope_news.each do |page| %>
              <%= render 'gobierto_participation/processes/place_news', { page: page } %>
            <% end %>
          <% else %>
            <%= t('.no_news') %>
          <% end %>
        </div>
        <% if @scope_news.any? %>
          <%= link_to t('.show_more_news'), gobierto_participation_news_index_path(scope_id: @scope.slug) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
