<div class='gradient-bg'>
  <div class='column'>
    <div class='pure-g'>
      <div class='pure-u-1 pure-u-lg-1-3'>
      </div>
      <div class='pure-u-1 pure-u-lg-2-3'>
        <article>
          <h1><%= link_to @attachment.name, @attachment.human_readable_path, target: '_blank' %></h1>
          <div class='meta'>
            <time>
              <%= l(@attachment.updated_at, format: :long) %>
            </time>
          </div>
          <%= sanitize @attachment.description %>
          <div class='document'>
            <div class='soft'>
              <small>
                <%= filetype_icon(@attachment) %>
                ·
                <%= @attachment.extension.upcase %>
                ·
                <%= number_to_human_size(@attachment.file_size, precision: 2, separator: ',') %>
              </small>
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</div>
