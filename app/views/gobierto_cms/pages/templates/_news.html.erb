<div class="column">
  <div class="cms_page">
    <main class="content">
      <div class="pure-g">
        <div class="pure-u-1 pure-u-lg-1-4">
          <h2 class="with_separator"><%= t('gobierto_participation.shared.news') %></h2>

          <% if @page.attachments.any? %>
            <h4 class="with_light_separator m_t_1"><%= t('gobierto_participation.shared.documents') %></h4>
            <div class="document_list m_b_2">
              <% @page.attachments.each do |attachment| %>
                <div class="document">
                  <%= link_to attachment.name, attachment.human_readable_path, target: "_blank" %>
                  <div class="soft">
                    <small>
                      <%= filetype_icon(attachment) %> · <%= attachment.extension.upcase %> ·
                      <%= number_to_human_size(attachment.file_size, precision: 2, separator: ",") %>
                    </small>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="pure-u-1 pure-u-lg-3-4">
          <article>
            <h1><%= title @page.title %></h1>

            <%== render_liquid(@page.body) %>

            <div class="note">
              <time>
                <%= l(@page.updated_at, format: :long) %>
              </time>
            </div>
          </article>
        </div>
      </div>
    </main>
  </div>
</div>
