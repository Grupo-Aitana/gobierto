<%= render "gobierto_admin/shared/validation_errors", resource: @person_post_form %>

<%= form_for(@person_post_form, as: :person_post, url: @person_post_form.persisted? ? admin_people_person_post_path(@person, @person_post_form) : admin_people_person_posts_path(@person)) do |f| %>

  <div class="pure-g">

    <div class="pure-u-1 pure-u-md-16-24">

      <div class="form_item input_text">
        <%= label_tag "person_statement[title]]" do %>
          <%= f.object.class.human_attribute_name(:title) %>
          <%= attribute_indication(@person_post_form.person_post.class, :title) %>
        <% end %>
        <%= f.text_field :title, placeholder: t(".placeholders.title") %>
      </div>

      <div class="form_item textarea">
        <%= f.label :body %>
        <%= f.text_area :body_source, attachment_path: admin_people_file_attachments_path, data: {wysiwyg: true} %>
      </div>
      <%= f.hidden_field :body %>

      <div class="form_item input_text">
        <%= f.label :tags %>
        <%= f.text_field :tags, placeholder: t(".placeholders.tags") %>
      </div>

    </div>

    <div class="pure-u-1 pure-u-md-2-24"></div>

    <%= render partial: 'gobierto_admin/shared/save_widget', locals: { f: f, levels: @person_post_visibility_levels } %>

  </div>

<% end %>
