$('#events').html('<%= j render(partial: 'index', locals: { collection: @collection }) %>');
$('[data-scope]').removeClass('active');
<% if params[:scope] %>
  $('[data-scope="<%= params[:scope] %>"]').addClass('active');
<% else %>
  $('[data-scope="upcoming"]').addClass('active');
<% end %>

<% if params[:events_page] %>
  $('#events').velocity('scroll', { duration: 500 });
<% elsif params[:archived_events_page] %>
  $('#archived-list').velocity('scroll', { duration: 500 });
<% end %>