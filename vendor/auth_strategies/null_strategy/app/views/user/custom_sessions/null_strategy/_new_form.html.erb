<div class="login_box">
  <h2><%= t(".session_title") %></h2>

  <%= form_for(user_session_form, as: :user_session, url: :user_custom_session, html: { id: "user-session-form" }) do |f| %>
    <%= f.hidden_field :referrer_url %>
    <%= f.hidden_field :referrer_entity %>

    <div class="form_item input_text">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="form_item input_text">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <%= f.submit t(".submit"), class: "button" %>
  <% end %>
</div>
